<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.EditProfileController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="300"
      stylesheets="@../styles/light.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier le profil" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Prénom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="prenomField" promptText="Entrez votre prénom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nom :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" promptText="Entrez votre nom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="Entrez votre email" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
</VBox>
